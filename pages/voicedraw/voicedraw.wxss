/* pages/voicedraw/voicedraw.wxss */
.form-input {
  display: flex;
  flex-direction: column;
  margin: 0rpx 30rpx;
  background-color: #fff;
  border-radius: 5rpx;
  padding: 20rpx 20rpx;
}

.input-item {
  display: flex;
  flex-direction: row;
  align-items: center;
  margin: 20rpx 0;
  padding: 20rpx 20rpx;
  border: 1px solid #e5e5e5;
  border-radius: 50rpx;
}

.input-val {
  flex: 1;
  padding-left: 20rpx;
  font-size: 32rpx;
}
.content-below {
  font-size: 13pt;
  line-height: 85rpx;
  height: 85rpx;
  background: #add8e6;
  color: #fff;
  text-align: center;
  border-radius: 50rpx;
  margin: 50rpx 80rpx;
}

.content-below:active {
  opacity: 0.8;
}

.img{
  width: 120rpx;
  height: 120rpx;
}



.mini-btn{
 
  /* margin-left: 45rpx; */
  background-color: transparent;   /*按钮透明*/  
   border:none;				/*设置按钮边框*/
  
   text-align: center;

   margin: 350rpx 80rpx;
}
.mini-btn::after{
  border:none；
}